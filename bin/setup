#!/usr/bin/env bash

# Set up Magento cron

echo "* * * * * /usr/local/bin/php /srv/www/bin/magento cron:run | grep -v 'Ran jobs by schedule' >> /srv/www/var/log/magento.cron.log" | crontab -
(crontab -l 2>/dev/null; echo "* * * * * /usr/bin/php /srv/www/bin/magento setup:cron:run >> /srv/www/var/log/setup.cron.log") | crontab -

# Start the cron service
/usr/sbin/cron
